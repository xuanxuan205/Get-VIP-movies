{
  "app": {
    "name": "Video Player Assistant",
    "version": "2.1.1",
    "description": "专业的多媒体播放工具",
    "author": "xuanxuan205",
    "homepage": "https://github.com/xuanxuan205/Video-Player-Assistant"
  },
  "player": {
    "default_volume": 80,
    "auto_play": false,
    "remember_position": true,
    "fullscreen_on_double_click": true
  },
  "video": {
    "default_quality": "auto",
    "hardware_acceleration": true,
    "supported_formats": [
      "mp4", "avi", "mkv", "mov", "wmv", 
      "flv", "webm", "m4v", "3gp", "ogv"
    ],
    "subtitle_formats": ["srt", "ass", "ssa", "vtt"]
  },
  "ui": {
    "theme": "dark",
    "language": "zh_CN",
    "window_size": {
      "width": 1200,
      "height": 800
    },
    "remember_window_state": true
  },
  "network": {
    "timeout": 30,
    "retry_count": 3,
    "user_agent": "VideoPlayerAssistant/2.1.1"
  },
  "performance": {
    "buffer_size": 8192,
    "max_cache_size": 100,
    "enable_gpu_acceleration": true
  },
  "security": {
    "check_file_integrity": true,
    "safe_mode": true,
    "log_level": "INFO"
  },
  "paths": {
    "download_directory": "./downloads",
    "cache_directory": "./cache",
    "log_directory": "./logs",
    "config_directory": "./config"
  }
}