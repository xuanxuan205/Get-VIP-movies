{
  "app": {
    "name": "MultiMedia Player Pro",
    "version": "2.1.1",
    "description": "专业的多媒体播放工具",
    "author": "MultiMedia Team",
    "homepage": "https://github.com/your-username/multimedia-player-pro",
    "support_url": "https://github.com/your-username/multimedia-player-pro/issues"
  },
  "player": {
    "default_volume": 80,
    "auto_play": false,
    "remember_position": true,
    "hardware_acceleration": true,
    "subtitle_encoding": "utf-8",
    "default_subtitle_size": 16
  },
  "ui": {
    "theme": "dark",
    "language": "zh_CN",
    "window_width": 1200,
    "window_height": 800,
    "always_on_top": false,
    "show_toolbar": true,
    "show_statusbar": true
  },
  "performance": {
    "buffer_size": 8192,
    "max_cache_size": 512,
    "enable_gpu_decode": true,
    "thread_count": 4,
    "memory_limit": 1024
  },
  "formats": {
    "video": [
      "mp4", "avi", "mkv", "flv", "mov", "wmv", 
      "webm", "3gp", "rm", "rmvb", "asf", "m4v"
    ],
    "audio": [
      "mp3", "aac", "flac", "wav", "ogg", "m4a",
      "ac3", "dts", "ape", "wma", "opus"
    ],
    "subtitle": [
      "srt", "ass", "ssa", "vtt", "sub", "idx",
      "smi", "usf", "txt"
    ]
  },
  "shortcuts": {
    "play_pause": "Space",
    "fullscreen": "F11",
    "screenshot": "F12",
    "volume_up": "Up",
    "volume_down": "Down",
    "seek_forward": "Right",
    "seek_backward": "Left",
    "next_file": "Ctrl+Right",
    "prev_file": "Ctrl+Left"
  },
  "network": {
    "timeout": 30,
    "retry_count": 3,
    "user_agent": "MultiMedia Player Pro/2.1.1",
    "enable_proxy": false,
    "proxy_host": "",
    "proxy_port": 0
  },
  "advanced": {
    "debug_mode": false,
    "log_level": "INFO",
    "auto_update_check": true,
    "crash_report": true,
    "telemetry": false
  }
}